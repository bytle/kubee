#!/bin/bash
# @name kube-cidr
# @brief Returns the cidr of pods
# @description
#     Return the CIDR of pods in the cluster
#

set -Eeuo pipefail
source bashlib-error.sh
error::set_trap

synopsis(){
  echo "Usage:"
  echo ""
  echo '```bash'
  # shellcheck disable=SC2005
  echo "$(basename "$0")"
  echo '```'

}

if [[ "${1:-}" == "synopsis" ]]; then
  synopsis
  exit
fi

# Help ?
HELP=${1:-}
if [[ $HELP =~ -h|help ]]; then
  synopsis
  exit
fi

kubee::set_kubeconfig_env || error::exit $?

######################
# Main
######################
kubectl get nodes -o jsonpath='{range .items[*]}{.metadata.name}{"\t"}{.spec.podCIDR}{"\n"}{end}'
